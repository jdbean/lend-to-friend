  <br></br>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br></br>
  <%= f.label :author %><br>
  <%= f.text_field :author %>
  <br></br>
  <%= f.label :genre %><br>
  <%= f.text_field :genre %>
  <br></br>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
  <br></br>
  <%= f.label :image %><br>
  <%= f.text_field :image %>
  <br></br>
  <%= f.submit %>
<% end %>
