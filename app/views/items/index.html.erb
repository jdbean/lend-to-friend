<%= render "layouts/overdue" %>

<h1>Books</h1>
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-md-3 col-md-offset-1" >
          <div class="card mb-3 box-shadow h-100">
            <img class="card-img-top" src=<%= book.image %>>
            <div class="card-body d-flex flex-column">
              <p class="card-text"><%= book.title %></p>
              <!-- <div class="justify-content-between align-items-center"> -->
                <div class="mt-auto">
                <div class="btn-group">
                  <%= button_to "view", book, :method => "get", :class => "btn btn-sm btn-outline-secondary" %>
                </div>
                <!-- <small class="text-muted">9 mins</small> -->
              <!-- </div> -->
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
<br>
<%= link_to 'See All Books', books_path, :method => "get", :class => "btn btn-sm btn-outline-secondary" %>
