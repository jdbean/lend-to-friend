<%= form_with model: @item do |f| %>
  <%= f.hidden_field :type, value: @type %>
  <br></br>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br></br>

  <% if @type == 'Book' %>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
    <br></br>
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
    <br></br>
  <% elsif @type == 'Game' || @type == 'Movie' %>
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
    <br></br>
  <% end %>

  <%= f.label :description %><br>
  <%= f.text_area :description %>
  <br></br>
  <%= f.label :image %><br>
  <%= f.text_field :image %>
  <br></br>
  <%= f.submit %>
<% end %>
