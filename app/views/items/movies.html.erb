<%= render "layouts/overdue" %>

<h1>All Movies</h1>

<% @movies.each_slice(3) do |movies| %>
    <div class="row">
      <% movies.each do |movie| %>
        <div class="col-md-4" >
          <div class="card mb-4 box-shadow h-100">
            <img class="card-img-top" src=<%= movie.image %>>
            <div class="card-body">
              <p class="card-text"><%= movie.title %></p>
              <p class="card-text">Average Rating: <%= movie.get_average_rating %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= button_to "view", movie, :method => "get", :class => "btn btn-sm btn-outline-secondary" %>
                </div>
                <% if movie.is_available? %>
                  <small class="text-primary">Available</small>
                <% else %>
                  <% if movie.get_loans.any? %>
                    <% if movie.get_loans.last.overdue %>
                      <small class="text-danger">Overdue</small>
                    <% end %>
                  <% end %>
                  <small class="text-muted">Check back on <%= movie.get_loans.last.due_date %></small>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
<% end %>

<%= paginate @movies, theme: 'twitter-bootstrap-4' %>
