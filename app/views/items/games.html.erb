<%= render "layouts/overdue" %>

<h1>All Games</h1>

<% @games.each_slice(3) do |games| %>
    <div class="row">
      <% games.each do |game| %>
        <div class="col-md-4" >
          <div class="card mb-4 box-shadow h-100">
            <img class="card-img-top" src=<%= game.image %>>
            <div class="card-body">
              <p class="card-text"><%= game.title %></p>
              <p class="card-text">Average Rating: <%= game.get_average_rating %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= button_to "view", game, :method => "get", :class => "btn btn-sm btn-outline-secondary" %>
                </div>
                <% if game.is_available? %>
                  <small class="text-primary">Available</small>
                <% else %>
                  <% if game.get_loans.any? %>
                    <% if game.get_loans.last.overdue %>
                      <small class="text-danger">Overdue</small>
                    <% end %>
                  <% end %>
                  <small class="text-muted">Check back on <%= game.get_loans.last.due_date %></small>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
<% end %>

<%= paginate @games, theme: 'twitter-bootstrap-4' %>
