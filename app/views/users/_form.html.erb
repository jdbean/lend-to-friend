<%= simple_form_for @user do |f| %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :email, label: 'Email' %>
  <%= f.input :phone, label: 'Phone' %>
  <%= f.input :street_address, label: 'Street Address' %>
  <%= f.input :city, label: 'City' %>
  <%= f.input :state, label: 'State' %>
  <%= f.input :zipcode, label: 'Zipcode' %>
  <%= f.input :avatar, label: 'Avatar URL' %>

  <%= f.button :submit, :class => "btn btn-md btn-outline-secondary" %>
<% end %>
